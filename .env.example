# ===========================================
# Whale Tracker Admin Frontend - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control
# ===========================================

# -----------------------------------------
# Backend API Configuration
# -----------------------------------------
# The base URL for the backend API (required)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend authentication endpoint (required)
BACKEND_AUTH_URL=http://localhost:8000/api/auth

# -----------------------------------------
# Server-Sent Events (SSE) Streams
# -----------------------------------------
# These are public endpoints that don't require authentication
# Used for real-time transfer and coordinated trade updates

# Combined stream (all events)
NEXT_PUBLIC_SSE_URL=http://localhost:8000/stream/all

# Individual transfer events stream
NEXT_PUBLIC_SSE_TRANSFERS_URL=http://localhost:8000/stream/transfers

# Coordinated trades stream
NEXT_PUBLIC_SSE_COORDINATED_URL=http://localhost:8000/stream/coordinated

# -----------------------------------------
# NextAuth.js Configuration
# -----------------------------------------
# The base URL of this frontend application (required)
# In production, this should be your deployed domain
NEXTAUTH_URL=http://localhost:3000

# Secret key for encrypting JWT tokens (required)
# Generate a secure secret with: openssl rand -base64 32
# IMPORTANT: Change this in production!
NEXTAUTH_SECRET=your-nextauth-secret-key-here-change-in-production

# -----------------------------------------
# Optional: Development Settings
# -----------------------------------------
# Enable debug mode for NextAuth (shows detailed auth logs)
# NEXTAUTH_DEBUG=true

# Node environment (development | production | test)
# NODE_ENV=development

# -----------------------------------------
# Optional: Performance & Monitoring
# -----------------------------------------
# Enable React Query DevTools in production (not recommended)
# NEXT_PUBLIC_ENABLE_QUERY_DEVTOOLS=false

# API request timeout in milliseconds (default: 30000)
# NEXT_PUBLIC_API_TIMEOUT=30000

# SSE reconnection delay in milliseconds (default: 3000)
# NEXT_PUBLIC_SSE_RECONNECT_DELAY=3000

# -----------------------------------------
# Production Example Values
# -----------------------------------------
# NEXT_PUBLIC_API_URL=https://helius.sarislabs.com
# BACKEND_AUTH_URL=https://helius.sarislabs.com/api/auth
# NEXT_PUBLIC_SSE_URL=https://helius.sarislabs.com/stream/all
# NEXT_PUBLIC_SSE_TRANSFERS_URL=https://helius.sarislabs.com/stream/transfers
# NEXT_PUBLIC_SSE_COORDINATED_URL=https://helius.sarislabs.com/stream/coordinated
# NEXTAUTH_URL=https://admin.yourwhaletracker.com
# NEXTAUTH_SECRET=<generated-secure-secret>
